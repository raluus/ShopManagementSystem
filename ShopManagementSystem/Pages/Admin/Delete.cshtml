@page "{id:int?}"
@model ShopManagementSystem.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
}

<div class="title-name">
    <img class="animated-icon-image" src="~/images/seeMoreIcon.gif" alt="Logo" />
    <h1 class="hover-effect">Are you sure you want to delete this product?</h1>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2 label-value">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10 info-value">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2 label-value">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10 info-value">
            $@Html.DisplayFor(model => model.Product.Price)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="adminBtn" asp-page="./Index">Back to List</a>
    </form>
</div>
